<Window x:Class="flappy_bird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flappy_bird"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown" ResizeMode="NoResize" MouseLeftButtonDown="Window_MouseLeftButtonDown">
  
    <Grid>

        <Image Source="/istockphoto-1333010525-612x612.jpg" Stretch="Fill"/>
        <Canvas x:Name="canvas">
            <Rectangle x:Name="rectangleBird" Height="60" Width="60" Canvas.Left="45" Canvas.Top="31" RenderTransformOrigin="0.5,0.5">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/madar.png" Stretch="Fill">
                        <ImageBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="1.1" ScaleY="1.1"/>
                                <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                <RotateTransform CenterX="0.5" CenterY="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label x:Name="lbTest" Content="" Canvas.Left="291" Canvas.Top="317"/>
        </Canvas>
        <Label x:Name="lbScore" Content="Score: 0" Foreground="White" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="625,10,0,0"/>
        <Rectangle x:Name="menuHatter">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF8893D0" Offset="1"/>
                    <GradientStop Color="#FFA93C3C"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel x:Name="menu">
            <Label Content="Flappy Bird" FontSize="48" HorizontalAlignment="Center" Background="#00000000" Foreground="White" FontWeight="Bold"/>
            <Label></Label>
            <Button x:Name="btnPlay" Width="150px" Height="30px" Background="#41DDDDDD" BorderBrush="#00707070" Foreground="White" Content="Játék" Click="btnPlay_Click"/>
            <Border Width="150px" Height="30px" Background="#41DDDDDD" HorizontalAlignment="Center">
                <CheckBox x:Name="cbEso" Content="Eső" Foreground="White" VerticalContentAlignment="Center"></CheckBox>
                
            </Border>
            <Border Width="150px" Height="30px" Background="#41DDDDDD" HorizontalAlignment="Center">
                <CheckBox x:Name="cbKod" Content="Köd" Foreground="White" VerticalContentAlignment="Center"></CheckBox>

            </Border>



        </StackPanel>
        <Image x:Name="imgEso" Visibility="Hidden" gif:ImageBehavior.AnimatedSource="9d9a23a4d99de3a7fae1a34e5972a4b7.gif" gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.RepeatBehavior="Forever" Stretch="Fill"  />
    </Grid>
</Window>
